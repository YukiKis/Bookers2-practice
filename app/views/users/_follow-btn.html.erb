
<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= form_with url: relationship_path(current_user.active_relationships.find_by(followed_id: user.id)), method: :delete, remote: true do |f| %>
      <%= f.hidden_field :user_id, value: user.id%>
      <%= f.submit "Unfollow", class: "btn btn-warning btn-block" %>
    <% end %>
  <% else %>
    <%= form_with url: relationships_path, remote: true do |f| %>
      <%= f.hidden_field :user_id, value: user.id %>
      <%= f.submit "Follow", class: "btn btn-success btn-block" %>
    <% end %>
  <% end %>
<% end %>