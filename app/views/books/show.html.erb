<%= render "books/error", book: @book_new %>

<div class="col-xs-3">
  <%= render "layouts/sidebar", user: @user, book_new: @book_new %>
</div>

<div class="col-xs-9">
  <section class="book-show">
    <h3>Book details</h3>
    <table class="table table-hover">
      <tr>
        <th>
          <%= link_to user_path(@user) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: "jpeg", fallback: "noimage.jpg", size: "30x30" %><br><%= @user.name %>
          <% end %>
        </th>
        <td><%= link_to @book.title, @book %></td>
        <td><%= @book.body %></td>
        <td id="favorite-btn"><%= render "favorites/favorite", book: @book %></td>
      </tr>
    </table>

    <table class="table" id="book-comment">
      <%= render "comments/book-comment", book: @book %>
    </table>

    <%= render "comments/comment-new", book: @book, comment_new: @comment_new %>

  </section>
</div>